{
  "name": "@dsys/multi-api",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "author": "Alex Kern <alex@cleargraph.com>",
  "scripts": {
    "start": "nodemon -e ts,graphql -x ts-node -r dotenv/config src/index.ts",
    "debug": "nodemon -e ts,graphql -x ts-node -r dotenv/config --inspect src/index.ts",
    "dev": "npm-run-all --parallel dev:redis dev:multi-api dev:prisma:run dev:prisma:watch dev:playground",
    "dev:multi-api": "./scripts/wait-for.sh localhost:6379 -- ./scripts/wait-for.sh localhost:4466 -- yarn run start",
    "dev:redis": "docker-compose up redis",
    "dev:prisma:run": "docker-compose up prisma",
    "dev:prisma:watch": "./scripts/wait-for.sh localhost:4466 -- echo \"Waiting for Prisma to finish starting\" && sleep 10 && nodemon --watch database -e graphql,yml -x yarn run dev:prisma:deploy",
    "dev:prisma:deploy": "yarn prisma deploy && yarn run codegen",
    "dev:playground": "graphql playground",
    "codegen": "graphql get-schema --project database && graphql codegen",
    "lint": "npm-run-all --parallel lint:typescript lint:graphql",
    "lint:typescript": "tslint --fix --exclude src/generated/prisma.ts 'src/**/*.ts'",
    "lint:graphql": "prettier --write 'database/**/*.graphql' 'src/schema.graphql'",
    "check": "tsc --noEmit && tslint --exclude src/generated/prisma.ts 'src/**/*.ts' && prettier -l 'database/**/*.graphql' 'src/schema.graphql'",
    "precommit": "yarn run check",
    "docker:build": "docker build -t dsys/multi-api:latest .",
    "docker:run": "docker run -it dsys/multi-api:latest"
  },
  "dependencies": {
    "bignumber.js": "^7.2.1",
    "bluebird": "^3.5.1",
    "dataloader": "^1.4.0",
    "eth-ens-namehash": "^2.0.8",
    "graphql-yoga": "1.14.6",
    "libphonenumber-js": "^1.2.15",
    "node-fetch": "^2.1.2",
    "prisma-binding": "^2.0.2",
    "qs": "^6.5.2",
    "redis": "^2.8.0",
    "web3": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "dotenv": "^6.0.0",
    "graphql-cli": "2.16.0",
    "husky": "^0.14.3",
    "nodemon": "1.17.5",
    "npm-run-all": "4.1.3",
    "prettier": "^1.13.5",
    "prisma": "^1.9.0",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.9.1",
    "web3-typescript-typings": "^0.10.2"
  }
}
