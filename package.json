{
  "name": "eth-explorer",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "author": "Alex Kern <alex@cleargraph.com>",
  "scripts": {
    "start": "nodemon -e ts,graphql -x ts-node src/index.ts",
    "debug": "nodemon -e ts,graphql -x ts-node --inspect src/index.ts",
    "playground": "graphql playground",
    "dev": "npm-run-all --parallel start playground",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "precommit": "yarn run lint",
    "docker:build": "docker build -t dsys/eth-explorer:latest .",
    "docker:run": "docker run -it dsys/eth-explorer:latest"
  },
  "dependencies": {
    "dataloader": "^1.4.0",
    "graphql-yoga": "1.14.6",
    "web3": "^1.0.0-beta.34"
  },
  "devDependencies": {
    "dotenv": "5.0.1",
    "graphql-cli": "2.16.0",
    "husky": "^0.14.3",
    "nodemon": "1.17.5",
    "npm-run-all": "4.1.3",
    "ts-node": "^6.1.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.1",
    "web3-typescript-typings": "^0.10.2"
  }
}
